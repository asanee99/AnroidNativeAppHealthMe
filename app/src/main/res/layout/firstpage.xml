<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:background="@drawable/bgnew01"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/gotoReset"
            android:layout_margin="5dp"
            android:background="@drawable/userbtn01"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@drawable/confoodbtn01"
            android:elevation="100dp"
            android:id="@+id/gotoMain"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/healthybtn01"
        android:layout_margin="5dp"
        android:id="@+id/gotoNews"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:background="@drawable/exerbtn01"
        android:id="@+id/gotoExer"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
         />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="5dp"
            android:id="@+id/gotoDev"
            android:background="@drawable/devbtn01"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>




</LinearLayout>